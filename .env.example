# Ollama Configuration
OLLAMA_MODEL=llama3.2
OLLAMA_EMBEDDING_MODEL=gte-large
OLLAMA_BASE_URL=http://localhost:11434

# LLM Parameters
LLM_TEMPERATURE=0.3
LLM_TOP_P=0.9
LLM_TOP_K=40
LLM_MAX_TOKENS=2048

# Chunking Configuration
CHUNK_SIZE=900
CHUNK_OVERLAP=200

# Retrieval Configuration
RETRIEVAL_TOP_K=5
MIN_SIMILARITY_SCORE=0.3

# Vector Store
VECTOR_DB_PATH=output/chroma_db
VECTOR_DB_COLLECTION=knowledge_base

# Logging
LOG_LEVEL=INFO
LOG_FILE=output/app.log

# Evaluation
EVAL_METRICS=schema_pass_rate,latency,retrieval_accuracy
BASELINE_MODEL=basic_template

# PII Detection
ENABLE_PII_DETECTION=true
REDACT_EMAIL=true
REDACT_PHONE=true
REDACT_SSN=true
